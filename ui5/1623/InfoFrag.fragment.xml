<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:f="sap.ui.layout.form"
>
    <f:SimpleForm>
        <f:title><core:Title text="Flight Info" /></f:title>
        <f:content>
            <core:Title text="Airline Info" />
                <Label text="Airline" />
                    <Input value="AA" editable="false"/>
                    <Text text="American Airlines" />
                <Label text="Currency" />
                    <Input value="USD" editable="false" width="50%"/>
            <core:Title text="Flight Schedule" />
                <Label text="Flight Number" />
                    <Input value="17" editable="false" width="50%"/>
                <Label text="Departure city" />
                    <Input value="NEW YORK" editable="false"/>
                    <Button text="Popup Button"
                            press="onPopup"
                    />
                <Label text="Arrival City" />
                    <Input value="SAN FRANCISCO" editable="false" width="50%"/>

        </f:content>
    </f:SimpleForm>
</core:FragmentDefinition>