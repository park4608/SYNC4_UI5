<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:l="sap.ui.layout"
>
    <Panel>
        <Toolbar>
            <content>
                <Title text="Condition Info" />
                <ToolbarSpacer />
                <Button icon="sap-icon://search" press="onMsg"/>
            </content>
        </Toolbar>
        <content>
            <l:VerticalLayout>
                <l:HorizontalLayout>
                    <Label text="Airline" />
                    <Input id="inpCarrid" value="AA" />
                </l:HorizontalLayout>
                <l:HorizontalLayout>
                    <Label text="Currerncy" />
                    <Input id="inpCurrency" value="USD" />
                </l:HorizontalLayout>
            </l:VerticalLayout>
        </content>
    </Panel>
</core:FragmentDefinition>
